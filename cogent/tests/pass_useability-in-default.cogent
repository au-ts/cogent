type T1
type T2
type A

type B = < TAG_t1 T1 | TAG_t2 T2 >

type T = { a : A, b : B }

foo : T -> < Fail (U32, { a : A, b : B } take b, < TAG_t2 T2 >) 
             | Success ({ a : A, b : B } take b, T1) >
foo t =
   let x { b } = t
   in b
      | TAG_t1 t1 -> Success (x, t1)
      | d -> Fail (0, x, d)
