-- align32 (a,b): align a to b, NOTE b must be a power of 2
align32 : (U32, U32) -> U32
align32 (x,powof2) =
  (x + (powof2 - 1)) .&. complement(powof2 - 1)

align64 : (U64, U64) -> U64
align64 (x,powof2) =
  (x + (powof2 - 1)) .&. complement(powof2 - 1)

{-# cinline min_u32 #-}
{-# inline min_u32 #-}
min_u32: (U32, U32) -> (U32)
min_u32 (a, b) = if a < b then a else b

{-# cinline min_u64 #-}
{-# inline min_u64 #-}
min_u64: (U64, U64) -> (U64)
