{-# cinline cogent_low_16_bits #-}
cogent_low_16_bits: U32 -> U16
cogent_low_16_bits x = u32_to_u16 (x .&. 0xFFFF)

{-# cinline cogent_high_16_bits #-}
cogent_high_16_bits: U32 -> U16
cogent_high_16_bits x = u32_to_u16 ((x .&. 0xFFFF0000) >> 16)
