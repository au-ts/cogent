type OptElemA a acc = #{oelem: Option a, acc: acc}
type OptElemAO a acc obsv = #{oelem: Option a, acc: acc, obsv: obsv!}
type ArrA a acc = #{arr: a, acc: acc}
type ArrB a rbrk = #{arr:a, rbrk:rbrk}

